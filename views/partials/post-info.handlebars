<article class="post">
    <a class="single-post" href="/post/{{id}}">
        <div class="title">
            <h3>{{title}}</h3>
            <span>Posted by {{user.username}} on {{format_date created_at}}</span>

        </div>
        <div class="meta">
            <span>{{content}}</span>
        </div>
    </a>
</article>