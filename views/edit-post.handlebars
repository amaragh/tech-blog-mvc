<article>
    <a href="/dashboard"> Return to Dashboard</a>
    <h2>
        Edit Post
    </h2>
    <form class="edit-post-form">
        <div>
            <input name="post-title" type="text" value="{{post.title}}" />
            <textarea name="post-content" class="post-content">{{post.content}}</textarea>
        </div>

        <button type="submit">Update Post</button>
        <button type="button" class="delete-post-btn">Delete</button>
    </form>
</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
